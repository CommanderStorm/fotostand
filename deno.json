{
  "nodeModulesDir": "auto",
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.24",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/random": "jsr:@std/random@^0.1.4",
    "@std/toml": "jsr:@std/toml@^1.0.11",
    "hono": "jsr:@hono/hono@^4.11.0",
    "zod": "npm:zod@^4.1.13",
    "@tailwindcss/cli": "npm:@tailwindcss/cli@^4.1.18",
    "tailwindcss": "npm:tailwindcss@^4.1.18"
  },
  "tasks": {
    "build:css": "deno run -A npm:@tailwindcss/cli@4 -i ./src/styles/input.css -o ./src/static/output.css --minify",
    "server": "deno run --allow-net --allow-read=./data,./config.toml,./src --allow-write=./data server.tsx",
    "dev": "deno task build:css && deno task server",
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno lint && deno fmt --check"
  },
  "lint": {
    "include": [
      "src/",
      "*.ts",
      "*.tsx"
    ],
    "exclude": [
      "data/",
      "deno.lock"
    ],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "no-await-in-sync-fn",
        "no-empty-interface",
        "no-throw-literal"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": [
      "src/",
      "*.ts",
      "*.tsx"
    ],
    "exclude": [
      "data/",
      "deno.lock"
    ]
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
